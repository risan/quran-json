{"number":107,"name":"المَاعُونِ","transliteration":"Al-Maa'un","translation":"Almsgiving","revelation_type":"Meccan","total_verses":7,"verses":[{"number":1,"text":"بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ أَرَأَيْتَ الَّذِي يُكَذِّبُ بِالدِّينِ"},{"number":2,"text":"فَذَٰلِكَ الَّذِي يَدُعُّ الْيَتِيمَ"},{"number":3,"text":"وَلَا يَحُضُّ عَلَىٰ طَعَامِ الْمِسْكِينِ"},{"number":4,"text":"فَوَيْلٌ لِلْمُصَلِّينَ"},{"number":5,"text":"الَّذِينَ هُمْ عَنْ صَلَاتِهِمْ سَاهُونَ"},{"number":6,"text":"الَّذِينَ هُمْ يُرَاءُونَ"},{"number":7,"text":"وَيَمْنَعُونَ الْمَاعُونَ"}]}
