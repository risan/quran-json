{"number":100,"name":"العَادِيَاتِ","transliteration":"Al-Aadiyaat","translation":"The Chargers","revelation_type":"Meccan","total_verses":11,"verses":[{"number":1,"text":"بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ وَالْعَادِيَاتِ ضَبْحًا"},{"number":2,"text":"فَالْمُورِيَاتِ قَدْحًا"},{"number":3,"text":"فَالْمُغِيرَاتِ صُبْحًا"},{"number":4,"text":"فَأَثَرْنَ بِهِ نَقْعًا"},{"number":5,"text":"فَوَسَطْنَ بِهِ جَمْعًا"},{"number":6,"text":"إِنَّ الْإِنْسَانَ لِرَبِّهِ لَكَنُودٌ"},{"number":7,"text":"وَإِنَّهُ عَلَىٰ ذَٰلِكَ لَشَهِيدٌ"},{"number":8,"text":"وَإِنَّهُ لِحُبِّ الْخَيْرِ لَشَدِيدٌ"},{"number":9,"text":"۞ أَفَلَا يَعْلَمُ إِذَا بُعْثِرَ مَا فِي الْقُبُورِ"},{"number":10,"text":"وَحُصِّلَ مَا فِي الصُّدُورِ"},{"number":11,"text":"إِنَّ رَبَّهُمْ بِهِمْ يَوْمَئِذٍ لَخَبِيرٌ"}]}
