{"number":92,"name":"اللَّيۡلِ","transliteration":"Al-Lail","translation":"The Night","revelation_type":"Meccan","total_verses":21,"verses":[{"number":1,"text":"بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ وَاللَّيْلِ إِذَا يَغْشَىٰ"},{"number":2,"text":"وَالنَّهَارِ إِذَا تَجَلَّىٰ"},{"number":3,"text":"وَمَا خَلَقَ الذَّكَرَ وَالْأُنْثَىٰ"},{"number":4,"text":"إِنَّ سَعْيَكُمْ لَشَتَّىٰ"},{"number":5,"text":"فَأَمَّا مَنْ أَعْطَىٰ وَاتَّقَىٰ"},{"number":6,"text":"وَصَدَّقَ بِالْحُسْنَىٰ"},{"number":7,"text":"فَسَنُيَسِّرُهُ لِلْيُسْرَىٰ"},{"number":8,"text":"وَأَمَّا مَنْ بَخِلَ وَاسْتَغْنَىٰ"},{"number":9,"text":"وَكَذَّبَ بِالْحُسْنَىٰ"},{"number":10,"text":"فَسَنُيَسِّرُهُ لِلْعُسْرَىٰ"},{"number":11,"text":"وَمَا يُغْنِي عَنْهُ مَالُهُ إِذَا تَرَدَّىٰ"},{"number":12,"text":"إِنَّ عَلَيْنَا لَلْهُدَىٰ"},{"number":13,"text":"وَإِنَّ لَنَا لَلْآخِرَةَ وَالْأُولَىٰ"},{"number":14,"text":"فَأَنْذَرْتُكُمْ نَارًا تَلَظَّىٰ"},{"number":15,"text":"لَا يَصْلَاهَا إِلَّا الْأَشْقَى"},{"number":16,"text":"الَّذِي كَذَّبَ وَتَوَلَّىٰ"},{"number":17,"text":"وَسَيُجَنَّبُهَا الْأَتْقَى"},{"number":18,"text":"الَّذِي يُؤْتِي مَالَهُ يَتَزَكَّىٰ"},{"number":19,"text":"وَمَا لِأَحَدٍ عِنْدَهُ مِنْ نِعْمَةٍ تُجْزَىٰ"},{"number":20,"text":"إِلَّا ابْتِغَاءَ وَجْهِ رَبِّهِ الْأَعْلَىٰ"},{"number":21,"text":"وَلَسَوْفَ يَرْضَىٰ"}]}
